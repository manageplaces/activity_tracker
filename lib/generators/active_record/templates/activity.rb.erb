class <%= activity_class %> < ActiveRecord::Base
  has_many :<%= user_activity_class.underscore.pluralize %>
  has_many :<%= activity_batch_class.underscore.pluralize %>, through: :<%= user_activity_class.underscore.pluralize %>

  belongs_to :sender, class_name: '<%= user_class %>'
  belongs_to :subject, polymorphic: true
end
